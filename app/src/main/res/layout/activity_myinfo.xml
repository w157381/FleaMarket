<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_main">
        <ImageView
            android:id="@+id/myinfo_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/app_white"/>
        <TextView
            android:id="@+id/myinfo_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:textColor="@color/app_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:text="头像"
            android:layout_marginLeft="10dp"

            android:textSize="15dp"
            android:gravity="center"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/myinfo_headimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            fresco:fadeDuration="300"
            fresco:roundedCornerRadius="10dp"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/myinfo_img_head"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="学号"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_stuid"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="姓名"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="昵称"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/myinfo_img_nickname"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="性别"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_sex"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="出生日期"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_birthday"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="个人介绍"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_introduce"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="100dp"
            android:textSize="12dp"
            android:maxLength="20"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/myinfo_img_introduce"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="信用积分"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_credit"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="学校"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_univircity"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="学院"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_department"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="班级"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/myinfo_class"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"
            android:gravity="center|right"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="专业"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_major"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="100dp"
            android:textSize="12dp"
            android:gravity="center|right"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="年级"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_grade"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="故乡"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_location"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="常住"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/myinfo_nowlocation"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>
