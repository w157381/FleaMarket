<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_text_circle"/>
    <TextView
        android:id="@+id/item_brows_time"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:textSize="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/app_black"/>
   <TextView
       android:layout_width="2dp"
       android:layout_height="140dp"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="19dp"
       android:gravity="center_vertical"
       android:background="@color/app_maincolor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/app_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_brows_user_head"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/item_brows_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"/>
            <ImageView
                android:id="@+id/item_brows_del"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_delect_gray"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_brows_goods_img"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/item_brows_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/item_brows_goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/app_red"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
