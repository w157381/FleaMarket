<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
   <RelativeLayout
       android:id="@+id/eee"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:padding="10dp">
      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/item_commitem_headimg"
          android:layout_width="30dp"
          android:layout_height="30dp"
          fresco:fadeDuration="300"
          fresco:roundedCornerRadius="5dp"/>
      <TextView
          android:id="@+id/item_commitem_nickname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="35dp"
          android:text="name"
          android:textColor="@color/app_maincolor"/>

      <TextView
          android:id="@+id/item_commitem_onickname"
          android:layout_toRightOf="@+id/item_commitem_nickname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:text="name"
          android:textSize="10dp"
          android:textColor="@color/app_black"/>
      <TextView
          android:id="@+id/item_commitem_content"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:layout_marginTop="30dp"
          android:layout_marginLeft="35dp"
          android:text="name"
          android:textColor="@color/app_black"/>
      <TextView
          android:id="@+id/item_commitem_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="60dp"
          android:layout_marginLeft="35dp"
          android:text="name"
          android:textSize="10dp"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:gravity="center_horizontal"
         android:orientation="vertical">
         <ImageView
             android:id="@+id/item_commitem_zan_bt"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:src="@drawable/goods_zan0"/>
         <TextView
             android:id="@+id/item_commitem_zan_num"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
      </LinearLayout>
   </RelativeLayout>
</RelativeLayout>
