<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_addbull_rela"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_main">

        <ImageView
            android:id="@+id/admin_addbull_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加热销商品"
            android:textColor="@color/app_white"
            android:textSize="18sp" />

    </RelativeLayout>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/admin_addbull_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white2"
        android:inputType="text|textAutoComplete|textNoSuggestions" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_white"

            android:text="标题" />

        <EditText
            android:id="@+id/admin_addbull_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_white"
            android:gravity="center_vertical|left"
            android:hint="简短醒目的标题"
            android:maxEms="30"
            android:textColor="@color/app_black"
            android:textSize="12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="140dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_white"


            android:text="商品ID" />

        <EditText
            android:id="@+id/admin_addbull_goods_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:enabled="false"
            android:background="@drawable/bg_white"
            android:gravity="center_vertical|left"
            android:hint="请选择商品id"
            android:textColor="@color/app_black"
            android:textSize="12dp" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/admin_addbull_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="70dp"/>

    <Button
        android:id="@+id/admin_addbull_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_main_bt_maincolor"
        android:text="添 加"
        android:textColor="@color/app_white"
        android:textSize="20dp" />
</RelativeLayout>
