<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_white2"
    android:padding="10dp">

    <TextView
        android:id="@+id/iem_analyze_shopType"
        android:layout_width="match_parent"
        android:textColor="@color/app_black"
        android:layout_height="30dp"
        android:textSize="20dp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iem_analyze_shopImg"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/iem_analyze_shopTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/iem_analyze_shopPrice"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:textColor="@color/app_red"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/iem_analyze_go"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_main_bt_red"
        android:text="去看看"
        android:textColor="@color/app_white" />
</RelativeLayout>
