<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_white2"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_admin_bull_add_userhead"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/item_admin_bull_add_username"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="2dp"
            android:textSize="16dp"
            android:gravity="center_vertical|left"
            android:textColor="@color/app_black"/>
        <TextView
            android:id="@+id/item_admin_bull_add_goods_type"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/app_maincolor"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_admin_bull_add_goodsimg"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/item_admin_bull_add_goodsinfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/item_admin_bull_add_goodsprice"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:textColor="@color/app_red"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/item_admin_bull_add_go"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_main_bt_maincolor"
        android:text="é€‰TA"
        android:textColor="@color/app_white" />
</RelativeLayout>
