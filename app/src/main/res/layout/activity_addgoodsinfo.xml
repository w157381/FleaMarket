<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_main"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/addgoods_back"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/app_quxiao"
                android:textColor="@color/app_white" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/main_add_title"
                android:textColor="@color/app_white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addgoods_sure_bt"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/bg_main_bt"
                android:gravity="center"
                android:text="@string/app_sure"
                android:textColor="@color/app_white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addgoods_rela01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/main_add_type" />

            <TextView
                android:id="@+id/addgoods_type"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="@color/app_maincolor" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_margin="13dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="25dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="商品全称" />

           <EditText
               android:id="@+id/addgoods_name"
               android:layout_width="match_parent"
               android:layout_marginLeft="80dp"
               android:layout_height="40dp"
               android:hint="请输入商品的全称"
               android:textSize="12dp"
               android:background="@drawable/bg_white"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/addgoods_jieshaoinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:enabled="true"
            android:gravity="top"
            android:hint="@string/main_add_jieshao"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="3"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textSize="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addgoods_relist"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/addgoods_addimg_bt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_headimg" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="宝贝位置" />

            <TextView
                android:id="@+id/addgoods_location"
                android:layout_width="wrap_content"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/addgoods_location_bt"
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="6dp"
                android:layout_height="30dp"

                android:src="@drawable/location_now" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addgoods_rela02"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/main_add_kaiprice" />
            <TextView
                android:id="@+id/addgoods_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_marginLeft="80dp"
                android:gravity="center_vertical" />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_margin="13dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
