<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_message_userheadimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        fresco:placeholderImage="@drawable/userheadimg"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_message_usernickname"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center|left"
            android:textSize="14dp"
            android:textColor="@color/app_maincolor"/>

        <TextView
            android:id="@+id/item_message_message"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:gravity="center|left"
            android:maxLength="20"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/item_message_lastmessagetime"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="3dp"
            android:gravity="center|left"
            android:textSize="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_message_unread_messagenum"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textColor="@color/app_white"
        android:textSize="8dp"
        android:background="@drawable/bg_circle"/>
</RelativeLayout>
